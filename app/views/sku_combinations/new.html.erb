<h1>File Upload</h1>
<%= form_tag(sku_combinations_path, :multipart => true, method: :post) do %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
      	<%=label_tag "SKU Combination"%>
      	<%= file_field_tag 'upload', accept: 'text/csv', :required=> true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
      	<%=label_tag "SKU Denomination"%>
  			<%= number_field_tag :sku_no, '',class: 'form-control', :required=> true %>
      </div>
    </div>
  </div>
  <%= submit_tag "Upload", class: "btn btn-primary" %>
<% end %>